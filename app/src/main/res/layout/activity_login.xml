<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_linear_login"
    android:paddingHorizontal="30dp"
    android:paddingVertical="35dp"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/logo_polije"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kuesioner Kepribadian Ekstrovert &amp; Introvert"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textStyle="bold|normal"
            android:textSize="13dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:background="@drawable/bg_icon_login">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/icon_login"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang"
        android:textSize="26dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ini adalah aplikasi Tes Kepribadian \ngratis, Silahkan Login dengan \nAkun Google Anda"
        android:textSize="15dp"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:textColor="@color/white_800"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_google"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/google"
        android:text="Sign In with Google"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textStyle="normal"
        app:cornerRadius="20dp"/>
</LinearLayout>